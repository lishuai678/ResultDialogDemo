<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_loading_white_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.min.resultdialog.view.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.min.resultdialog.view.SucceedView
        android:id="@+id/succeed_view"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <com.min.resultdialog.view.FailedView
        android:id="@+id/failed_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <com.min.resultdialog.view.WarningView
        android:id="@+id/warning_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="succeed"
        android:textColor="#666666"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>